{
  // 필수
 "manifest_version": 2,
 "name": "OnMyFit - 너의 옷, 나의 핏",
 "version": "1.0.0",
 "description": "자신의 옷과 사이트 옷을 비교해주는 서비스",
 "icons": {
   "16": "images/omf_icon.png",
   "48": "images/omf_icon.png",
   "128": "images/omf_icon.png"
 },

 // "default_locale" : "ko",
 // "web_accessible_resources": ["templates/*","images/*"],

 "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

 "permissions": [
   "storage"
 ],

 "sidebar_action": {
   "default_page": "templates/index.html",
   "default_icon": {
     "16": "images/omf_icon.png"
   },
   "default_title": "OnMyFit"
 }
}
